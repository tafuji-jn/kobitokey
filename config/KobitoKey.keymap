            label = "__PASSWORD8__";
        };

        password9: password9 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none>;
            label = "__PASSWORD9__";
        };
    };

    combos {
        compatible = "zmk,combos";

        combo_esc {
            timeout-ms = <50>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
        };

        comb_atmark {
            bindings = <&kp LBKT>;
            key-positions = <16 17>;
        };

        comb_question {
            bindings = <&kp QUESTION>;
            key-positions = <26 27>;
        };

        comb_nakaguro {
            bindings = <&kp SLASH>;
            key-positions = <6 7>;
        };

        comb_kakko {
            bindings = <&kakko>;
            key-positions = <2 3>;
        };

        comb_inyou {
            bindings = <&inyou>;
            key-positions = <12 13>;
        };

        comb_underbar {
            bindings = <&kp JP_UNDERSCORE>;
            key-positions = <23 24>;
        };

        comb_jpyen {
            bindings = <&kp JP_YEN>;
            key-positions = <8 9>;
        };

        comb_kana {
            bindings = <&kp LANGUAGE_1>;
            key-positions = <33 32>;
        };

        comb_alphabet {
            bindings = <&kp LANGUAGE_2>;
            key-positions = <34 33>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q             &kp L     &kp U          &kp COMMA    &kp PERIOD  &kp F    &kp W        &kp R      &kp Y      &kp P
&kp E             &kp I     &kp A          &kp O        &kp MINUS   &kp K    &kp T        &kp N      &kp S      &kp H
&mt LEFT_SHIFT Z  &kp X     &kp C          &kp V        &kp F2      &kp G    &kp D        &kp M      &kp J      &kp B
&mo 5             &kp LALT  &kp BACKSPACE  &lt 2 SPACE  &kp LCTRL   &kp TAB  &lt 1 ENTER  &kp RSHFT  &kp RSHFT  &mt LALT SLASH
            >;
        };

        ARROW {
            label = "ARROW";
            bindings = <
&kp N0     &kp N1  &kp N2  &kp N3     &trans  &kp MINUS  &trans     &kp UP    &trans     &trans
&kp EQUAL  &kp N4  &kp N5  &kp N6     &trans  &kp HOME   &kp LEFT   &kp DOWN  &kp RIGHT  &kp END
&trans     &kp N7  &kp N8  &kp N9     &trans  &kp ASTRK  &kp SLASH  &kp LBKT  &kp RBKT   &trans
&trans     &trans  &trans  &kp LSHFT  &trans  &trans     &trans     &trans    &trans     &trans
            >;
        };

        NUMBER_FUNC {
            label = "NUMBER_FUNC";
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_CLR  &bt BT_CLR_ALL  &kp F1        &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &kp F5
&trans        &kp F7        &trans        &kp F10     &kp LC(C)       &kp PERIOD    &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp F10
&trans        &trans        &trans        &kp LC(X)   &kp LC(V)       &kp NUMBER_0  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &trans
&trans        &trans        &trans        &trans      &trans          &kp DEL       &trans        &trans        &trans        &trans
            >;
        };

        MOUSE {
            label = "MOUSE";
            bindings = <
&trans     &trans  &trans  &trans  &trans  &trans  &trans         &kp LC(PAGE_UP)    &trans    &trans
&trans     &trans  &trans  &trans  &trans  &trans  &mkp_exit_AML  &mkp MB3           &mkp MB2  &mo 4
&trans     &trans  &trans  &trans  &trans  &trans  &trans         &kp LC(PAGE_DOWN)  &trans    &trans
&kp LSHFT  &trans  &trans  &trans  &to 0   &trans  &trans         &trans             &to 0     &kp RALT
            >;
        };

        SCROLL {
            label = "SCROLL";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };

        MACRO {
            bindings = <
&trans      &trans         &trans      &trans      &trans  &trans  &trans  &trans  &trans  &trans
&password1  &kp LG(LS(S))  &password4  &trans      &trans  &trans  &trans  &trans  &trans  &trans
&password2  &password3     &password5  &password6  &trans  &trans  &trans  &trans  &trans  &trans
&trans      &trans         &trans      &trans      &trans  &trans  &trans  &trans  &trans  &trans
