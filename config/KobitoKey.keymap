/* OS設定を日本語キーボードのまま使用するための変換定義 */

#define JP_DQUOTE       AT                // "
#define JP_AMPERSAND    CARET             // &
#define JP_QUOTE        AMPERSAND         // '
#define JP_EQUAL        UNDER             // =
#define JP_CARET        EQUAL             // ^
#define JP_YEN          0x89              // ¥
#define JP_PLUS         COLON             // +
#define JP_TILDE        PLUS              // ~
#define JP_PIPE         LS(0x89)          // |
#define JP_AT           LEFT_BRACKET      // @
#define JP_COLON        SINGLE_QUOTE      // :
#define JP_ASTERISK     DOUBLE_QUOTES     // *
#define JP_BACKQUOTE    LEFT_BRACE        // `
#define JP_UNDERSCORE   LS(0x87)          // _
#define JP_LBRACKET     RIGHT_BRACKET     // [
#define JP_RBRACKET     BACKSLASH         // ]
#define JP_LPAREN       ASTERISK          // (
#define JP_RPAREN       LEFT_PARENTHESIS  // )
#define JP_LBRACE       RIGHT_BRACE       // {
#define JP_RBRACE       PIPE              // }
#define JP_KANA         LANGUAGE_1        // かな
#define JP_EISU         LANGUAGE_2        // 英数
#define JP_HANZEN       GRAVE             // 半角/全角

/ {
    behaviors {
        /* Alt+Tab swapper: Shift併用で逆方向切り替え可能 */

        swapper: swapper {
            compatible = "zmk,behavior-tri-state";
            #binding-cells = <0>;
            bindings = <&kt LALT>, <&kp TAB>, <&kt LALT>;

            ignored-key-positions = <30 37 38>; /* LSHFT, RSHFT positions */
        };

        /* Ctrl+PageDown: 次のタブ（Shift併用で逆方向） */

        tab_next: tab_next {
            compatible = "zmk,behavior-tri-state";
            #binding-cells = <0>;
            bindings = <&kt LCTRL>, <&kp PAGE_DOWN>, <&kt LCTRL>;

            ignored-key-positions = <30 37 38>;
        };

        /* Ctrl+PageUp: 前のタブ（Shift併用で逆方向） */

        tab_prev: tab_prev {
            compatible = "zmk,behavior-tri-state";
            #binding-cells = <0>;
            bindings = <&kt LCTRL>, <&kp PAGE_UP>, <&kt LCTRL>;

            ignored-key-positions = <30 37 38>;
        };

        /* オートマウスレイヤーをOFFにするtoggle */

        tog_off: toggle_layer_off {
            compatible = "zmk,behavior-toggle-layer";
            #binding-cells = <1>;
            toggle-mode = "off";
        };
    };
};

/* クリック後の猶予時間: この間にダブルクリックや右クリックが可能 */
&sl {
    release-after-ms = <3000>;
};

/ {

    macros {
        /* オートマウスレイヤー解除マクロ */

        exit_AML: exit_AML {
            compatible = "zmk,behavior-macro";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <0>;
            bindings = <&tog_off 3>;
        };

        /* 左クリック + オートマウスレイヤー解除 + CLICKレイヤー猶予 */

        mkp_exit_AML: mkp_exit_AML {
            compatible = "zmk,behavior-macro";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <0>;
            bindings
                = <&macro_press &mkp MB1>
                , <&macro_pause_for_release>
                , <&macro_release &mkp MB1>
                , <&macro_tap &to 0 &sl 6>
                ;
        };

        kakko: kakko {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_1 &kp LS(NUMBER_8) &kp LS(NUMBER_9) &kp ENTER &kp LEFT>;
            label = "KAKKO";
        };

        inyou: inyou {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LANGUAGE_2 &kp LS(PERIOD)>;
            label = "INYOU";
        };

        /* パスワードマクロ（非公開リポジトリでbindingsが置換される） */

        password1: password1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none>;
            label = "__PASSWORD1__";
        };

        password2: password2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none>;
            label = "__PASSWORD2__";
        };

        password3: password3 {
