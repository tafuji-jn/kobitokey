            bindings = <&none>;
            label = "__PASSWORD4__";
        };

        password5: password5 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none>;
            label = "__PASSWORD5__";
        };

        password6: password6 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none>;
            label = "__PASSWORD6__";
        };

        password7: password7 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&none>;
            label = "__PASSWORD7__";
        };

        password8: password8 {
